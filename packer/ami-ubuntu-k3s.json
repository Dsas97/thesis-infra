{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami_filter": {
        "filters": {
          "name": "ubuntu/images/hvm-ssd/ubuntu-jammy-22.04-amd64-server-*",
          "virtualization-type": "hvm",
          "root-device-type": "ebs"
        },
        "most_recent": true,
        "owners": ["099720109477"]
      },
      "instance_type": "t3.small",
      "ssh_username": "ubuntu",
      "ami_name": "thesis-edge-{{timestamp}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/install-docker.sh"
    },
    {
      "type": "shell",
      "script": "scripts/install-k3s-agent.sh"
    },
    {
      "type": "shell",
      "script": "scripts/install-node-exporter.sh"
    }
  ]
}
